{
  "name": "@gmod-workshop/steamdown",
  "version": "1.0.0",
  "description": "Convert Markdown to Steam BBCode",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "markdown",
    "bbcode",
    "steam",
    "workshop",
    "gmod"
  ],
  "author": "dhkatz",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.9",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "marked": "^15.0.7"
  },
  "tsup": {
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "clean": true,
    "sourceMap": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmod-workshop/steamdown.git"
  },
  "bugs": {
    "url": "https://github.com/gmod-workshop/steamdown/issues"
  },
  "homepage": "https://github.com/gmod-workshop/steamdown#readme"
}
